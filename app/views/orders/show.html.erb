<div class="container">
  <div class="row justify-content-center">
    <h1>Orders#show</h1>
      <div class="cards">
        <% @order.item_orders.each do |item_order| %>
          <div class="card text-center">

            <div class="form-container">

              <div class="flex-between">
                <%= pluralize item_order.quantity, item_order.item.name %>:
                <div class="actions">
                  <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
                  <span class="counter" data-count="<%= item_order.quantity %>"><%= item_order.quantity %></span>
                  <a href="#" class="btn round-bordered incrementer" data-offset="1">+</a>
                </div>
              </div>

              
            </div>

          </div>
        <% end %>
      </div>

  </div>
  <input type="submit" value="Pay <%= @order.price %>â‚¬" class="btn btn-primary btn-lg submit mx-auto d-block my-3 w-75">
</div>